@model ProduktDto
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Produkt</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="Emri produktit" asp-for="Name">

                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>

    <div class="row mb-3">
        <label col-sm-4 col-form-label>
            RAM
        </label>
        <div class="col-sm-8">
                    <input class="form-control" placeholder="" asp-for="Ram" />
                    <span asp-validation-for="Ram" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label col-form-label>
            Çmimi
        </label >
        <div class="col-sm-8">
           
            <input  class="form-control" placeholder="" asp-for="Price"/>
            <span asp-validation-for="Price" class="text-danger">
               
            </span>
        </div>

        <div class="row mb-3">
            <label>
                Brendi
            </label></>
            <div class="col-sm-8">
            <select class="form-select" asp-for="Brand">
               
                        <option value='DELL'>DELL</option>
                        <option value='APPLE'>APPLE</option>
                        <option value='LENOVO'>LENOVO</option>
                        <option value='HP'>HP</option>
                        <option value='ASUS'>ASUS</option>
                       
            </select>
            <span asp-validation-for="Brand"></span>
           </div>

          <div class="row mb-3"> 

               <div class="col-sm-8">
               <label class="col-form-label">
                            Description
               </label>
               <input class="form-control" placeholder="" asp-for="Description"/>
          </div>
          </div>

           <div class="row mb-3">
                    <div class="col-sm-8" >
                        <label asp-for="ImageFile" class="form-label">picture</label>
                            <input asp-for="ImageFile" class="form-control" >
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
           </div>
           <div>
               <label class="col-form-label">Storage</label>

               <div class="col-sm-8">
                            <input class="form-control" asp-for="Storage" />
                            <span asp-validation-for="Storage" class="text-danger"></span>
               </div>
                   
              

           </div>
          
           <div>
               <label class="col-form-label">StorageType</label>
                   <input  class="form-control " asp-for="Storagetype" />
             
               <span asp-validation-for="Storagetype" class="text-danger"></span>
           </div>

           <div>
               <label class="col-form-label">Procesori</label>
               <div class="col-sm-8">
                            <input class="form-control" asp-for="Procesor" />
                            <span asp-validation-for="Procesor" class="text-danger"></span>
               </div>
                     
                
           </div>

           </div>
           <div>
                    <label class="col-form-label">Manufacred Date</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" asp-for="Date" />
                    </div>
                        

           </div>
           
           <div>
                <label class="col-form-label">ScreenInch</label>
                     <input class="form-control" asp-for="ScreenInch"/>
                            <span asp-validation-for="ScreenInch" class="text-danger"></span>
               

           </div>

           <div>
                              <label class="col-form-label" >
                                Category
                              </label>
                   <div class="col-sm-8">
                        <select class="form-select" asp-for="Category">
                            <option value='Laptop'>Laptop</option>
                            <option value='Desktop'>Desktop</option>
                            <option value='Kompjuter'>Kompjuter</option>

                        </select>
                   </div>
                    <input type="hidden" name="IdentityUserId" value="@userManager.GetUserId(User)" />

                    
               
           </div>
    </div>
<div>

  
</div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


    
</form>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}