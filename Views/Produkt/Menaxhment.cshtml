@model List<Punim_Diplome.Models.Produkt>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<h2 class="text-center" mb-5>Lista e produkteve</h2>

<div class="row justify-content-center">
    <div class="col-auto">
        <a class="btn btn-primary" asp-controller="Produkt" asp-action="Create">Krijo produkt të ri</a>
    </div>
    <div class="col-auto">
        <a asp-controller="Produkt" asp-action="ExportToExcel" class="btn btn-success">Export to Excel</a>
    </div>
</div>





<table class="table">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Image</th>
            <th>operacionet</th>
           
           
        </tr>

    </thead>
    <tbody>
        @foreach (var Produkt in Model)
        {


            @* img src = "Produktet/@Produkt.ImageFileName" *@
            <tr>
                <td>@Produkt.Id</td>
                <td>@Produkt.Name</td>
                
                <td>@Produkt.Category</td>
                <td>
                    @Produkt.Price.ToString("C")

                </td>
                <td><img src="~/produktet/@Produkt.ImageFileName" width="100" /> </td>
                
              

                <td style=" white-space:nowrap">
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Produkt" asp-action="Edit" asp-route-id="@Produkt.Id">
                        Edit

                    </a>

                    <a class="btn btn-danger btn-sm" asp-controller="Produkt" asp-action="Delete" asp-route-id="@Produkt.Id" onclick="return confirm('Deshironi ta fshinini këtë produkt?' )"
                    role="button">
                        Delete
                    </a>

                    <a asp-controller="Produkt" asp-action="Details" asp-route-id="@Produkt.Id">
                        Details


                    </a>
                    
           



                </td>
            </tr>
        }

    </tbody>

</table> 