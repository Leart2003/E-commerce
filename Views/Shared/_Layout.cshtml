@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Punim_Diplome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Punim_Diplome.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href~=/css/site. />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>





</head>
<body>
    <header >

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">
            <div class="container-fluid" >

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <a class="navbar-brand" asp-area="" asp-controller="Produkt" asp-action="Index">
                        <img src="~/Images/favicon.jpg" alt="Logo" width="60" height="auto">
                    </a>
                 <ul class="navbar-nav flex-grow-1">


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produkt" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">Porositë e juaja </a>
                            </li>
                        }  
                        
                      
                       
                      
                </ul>
                <ul class="navbar-nav ">
                        @if (User.Identity.Name == "malokuleart@gmail.com")
                        {



                            <li class="nav-item"><a class="nav-link text-dark " asp-controller="Home" asp-action="Privacy">Menaxhimi i Stokut</a></li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                    
                </div>
            </div>
        </nav>
    </header>

    <style>
        /* Header Styling */
        header {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .navbar {
            background-color: #343a40 !important; /* Dark gray background */
            padding: 0.75rem 1rem;
        }

        .navbar-brand img {
            max-height: 50px;
            border-radius: 50%;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.05);
            }

        .navbar-nav .nav-link {
            color: #f8f9fa !important; /* Light text */
            font-weight: 500;
            transition: color 0.2s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107 !important; /* Bootstrap warning yellow on hover */
            }

        .navbar-nav .nav-item {
            margin-left: 1rem;
        }

        .navbar-toggler {
            border-color: #f8f9fa;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255,255,255,1%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

    </style>


    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <footer class="py-5 ">
        <hr />
        <div class="container">&copy; 2024 - Punim_Diplome - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
      
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

   
</body>
</html>


