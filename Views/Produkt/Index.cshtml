@model Punim_Diplome.Models.ProductVM
@{
    ViewData["Title"] = "Home Page";
}









<section>
<div class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>

    @*Search String*@
    <div class="d-flex justify-content-center align-items-center ">
        <form asp-controller="Produkt" asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" value="@Model.SearchString"

                   class="form-control" placeholder="Kërko" typeof="search" aria-describedby="basic-addon2">



            <button class="btn btn-outline-secondary ms-2"
                    type="submit" value="filter">
                Kërko
            </button>


        </form>
    </div>
    <div class="container mt-3">
        <div class="row">
            <!-- Filter by Brand -->
            <div class="col-md-6">
                <form asp-action="Index" asp-controller="Produkt" method="get" class="d-flex flex-column">
                    <label for="brandSelect" class="fw-bold mb-2">Filter by Brand:</label>
                    <select class="form-select" id="brandSelect" name="brand" onchange="this.form.submit()">
                        <option value="">Selekto sipas Brendit</option>
                        @foreach (var brand in Model.AvailableBrands)
                        {
                            <option value="@brand">@brand</option>
                        }
                    </select>
                </form>
            </div>

            <!-- Filter by Category -->
            <div class="col-md-6">
                <form asp-action="Index" asp-controller="Produkt" method="get" class="d-flex flex-column">
                    <label for="categorySelect" class="fw-bold mb-2">Filter by Category:</label>
                    <select class="form-select" id="categorySelect" name="selectedCategory" onchange="this.form.submit()">
                        <option value="">Filtro sipas kategorisë</option>
                        @foreach (var category in Model.AvailableCategories)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                    </form>
                
            </div>
        </div>
    </div>
    


</div>
</section>



<section class="py-4">
    <div class="container px-4 px-lg-5 mt-5">
        
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
            @foreach (var item in Model.Products)
            {

                <div class="col mb-5">
                    <div class="card h-100">
                        
                        <img class="card-img-top" src="~/Produktet/@item.ImageFileName" alt="@item.Name" />
               
                        <div class="card-body p-4">
                            <div class="text-center">
                               
                                <h5 class="fw-bolder">@item.Name</h5>
                            </div>

                            <p class="text-center">Price:@item.Price.ToString("C")</p>
                            <p class="text-center">Ram:@item.Ram </p>

                        </div>

                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-info border-1 mt-auto" role="button" asp-action="Details" asp-controller="Produkt" asp-route-id="@item.Id">View options</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>









