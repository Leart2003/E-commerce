@model ProduktDto
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Produkt</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="Emri produktit" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">RAM</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="RAM" asp-for="Ram" />
                    <span asp-validation-for="Ram" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Çmimi</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="Çmimi" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Brendi</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Brand">
                        <option value='DELL'>DELL</option>
                        <option value='APPLE'>APPLE</option>
                        <option value='LENOVO'>LENOVO</option>
                        <option value='HP'>HP</option>
                        <option value='ASUS'>ASUS</option>
                        <option value='Microsoft'>Microsoft</option>
                        <option value='Others'>Others</option>
                    </select>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="Description" asp-for="Description" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Picture</label>
                <div class="col-sm-8">
                    <input asp-for="ImageFile" class="form-control">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Storage</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="Storage " asp-for="Storage" />
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Storage Type</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="Storage type" asp-for="Storagetype" />
                    <span asp-validation-for="Storagetype" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Procesori</label>
                <div class="col-sm-8">
                    <input class="form-control"  placeholder="Procesori" asp-for="Procesor" />
                    <span asp-validation-for="Procesor" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Manufactured Date</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" asp-for="Date" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Screen Inch</label>
                <div class="col-sm-8">
                    <input class="form-control" placeholder="Screen Inch" asp-for="ScreenInch" />
                    <span asp-validation-for="ScreenInch" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Category">
                        <option value='Laptop'>Laptop</option>
                        <option value='Desktop'>Desktop</option>
                        <option value='Kompjuter'>Kompjuter</option>
                    </select>
                </div>
            </div>

            <input type="hidden" name="IdentityUserId" value="@userManager.GetUserId(User)" />

            <div class="text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}