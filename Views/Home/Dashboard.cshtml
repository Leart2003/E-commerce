@model IEnumerable<Punim_Diplome.Models.ProduktDetailsVM>


@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet">
</head>








<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container px-4 px-lg-5">

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">

                <li class="nav-item dropdown">
                   
                </li>
            </ul>
            @*                 <form class="d-flex">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Cart
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </form> *@
        </div>
    </div>
</nav>

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>

    @* SearchBar *@
    <div class="d-flex justify-content-center align-items-center ">
        <form asp-controller="Home" asp-action="Index" method="get" class="d-flex">
            <input type="text"
            class="form-control"
            placeholder="Kërko"
            aria-label="Search"
            typeof="search"
            name="searchString"
            aria-describedby="basic-addon2">

            <button class="btn btn-outline-secondary ms-2"
            type="submit"
            value="filter">
                Button
            </button>

        </form>
    </div>
    @*Filter by Brand*@
    <form asp-action="Index" asp-controller="Produkt" method="get">
        <label for="brandSelect">Filter by Brand:</label>
        <select id="brandSelect" name="brand" onchange="this.form.submit()">
            <option value="">-- All Brands --</option>
            @foreach (var brand in Model)
            {
                <option value="@brand">@brand</option>
            }
        </select>
    </form>
    @*Filter by Category*@

    <form asp-action="Index" asp-controller="Produkt" method="get">
        <label for="categorySelect">Filter by category:</label>
        <select id="categorySelect" name="">

        </select>
        </form>
     

</header>



<section class="py-4">
    <div class="container px-4 px-lg-5 mt-5">
        <!-- Bootstrap grid row -->
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
            @foreach (var item in Model)
            {

                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/Produktet/@item.Produkt.ImageFileName" alt="@item.Produkt.Name" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Produkt.Name</h5>
                            </div>

                            <p class="text-center">Price:@item.Produkt.Price.ToString("C")</p>
                            <p class="text-center">Ram:@item.Produkt.Ram </p>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" role="button" asp-action="Details" asp-controller="Produkt" asp-route-id="@item.Produkt.Id" >View options</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>




    





