@model IEnumerable<OrderProduct>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Të gjitha porosië e klienteve</h2>

<table class="table">
    <thead>
        <tr>
            <th>Porositur nga</th>
            <th>Product</th>
            <th>Data e porosisë</th>
            <th>Foto</th>
            <th>Gjendja e porosisë</th>
           
        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model)
        {
            
        
            <tr>
               
                
                <td>@item.User?.UserName</td>
                <td>@item.Produkt?.Name</td>
                <td>@item.OrderDate.ToShortDateString()</td>
                <td>
                    <img src="~/Produktet/@item.Produkt.ImageFileName" width="100" />
                </td>

                <td>
    <form asp-action="UpdateStatus" method="post" style="display:flex; gap: 5px;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@item.Id" />
                        <select name="status" class="form-control">
                            <option value="Pending" selected="@(item.OrderStatus == "Pending")">Pending</option>
                            <option value="Processing" selected="@(item.OrderStatus == "Processing")">Processing</option>
                            <option value="Shipped" selected="@(item.OrderStatus == "Shipped")">Shipped</option>
                            <option value="Cancelled" selected="@(item.OrderStatus == "Cancelled")">Cancelled</option>
                            <option value="Completed" selected="@(item.OrderStatus == "Completed")">Completed</option>
                        </select>

    <button type="submit" class="btn btn-sm btn-primary">Save</button>
</form>


                </td>
                    
                
            </tr>
        
        }
    </tbody>
</table>
